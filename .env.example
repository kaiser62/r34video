# Proxy Configuration
USE_PROXY=true
PROXY_HOST=192.168.1.140
PROXY_PORT=8887

# Debug Mode (disable for production)
DEBUG_MODE=false

# Performance tuning for free tier
MAX_WORKERS=2
CACHE_SIZE=128
REQUEST_TIMEOUT=8

# Flask Configuration
FLASK_ENV=production

# Production Settings (for Render deployment)
PYTHONUNBUFFERED=1
PYTHONDONTWRITEBYTECODE=1
WEB_CONCURRENCY=1

# For Render, use these settings:
# USE_PROXY=false
# DEBUG_MODE=false
# MAX_WORKERS=1
# CACHE_SIZE=32
# REQUEST_TIMEOUT=10